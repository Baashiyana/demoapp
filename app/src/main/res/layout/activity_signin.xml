<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySignin">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signin"
        android:id="@+id/signin_Imageview_imgwelcome"
        />

    <TextView
        android:id="@+id/signin_Textview_txtsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin_Imageview_imgwelcome"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="15sp"
        android:text="Sign in"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signin_Edittext_edemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin_Textview_txtsignin"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Email address"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/signin_Edittext_edpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin_Edittext_edemail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="10dp"
        android:hint="password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signin_Button_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin_Edittext_edpwd"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_shape_capsule"
        android:padding="8dp"
        android:text="Sign in"
        android:textColor="@color/white" />
</RelativeLayout>